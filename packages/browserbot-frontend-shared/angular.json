{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "pnpm",
    "analytics": false
  },
  "newProjectRoot": "projects",
  "projects": {
    "browserbot-frontend-shared": {
      "projectType": "library",
      "root": "projects/browserbot-frontend-shared",
      "sourceRoot": "projects/browserbot-frontend-shared/src",
      "prefix": "bb",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/browserbot-frontend-shared/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/browserbot-frontend-shared/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/browserbot-frontend-shared/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/browserbot-frontend-shared/src/test.ts",
            "tsConfig": "projects/browserbot-frontend-shared/tsconfig.spec.json",
            "karmaConfig": "projects/browserbot-frontend-shared/karma.conf.js"
          }
        }
      }
    }
  }
}
