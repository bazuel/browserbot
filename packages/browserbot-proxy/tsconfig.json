{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "target": "es6",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules", "dist"
  ]
}
